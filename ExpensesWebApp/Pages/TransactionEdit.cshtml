@page
@model ExpensesWebApp.Pages.TransactionEditModel
@{
	ViewData["Title"] = "Edit Transaction";
}

<h1>@Model.Duplicate</h1>

<hr />
<form method="post">
    <h3>Transaction Details</h3>
    <div class = "form-group row">
		<label class="col-sm-2 col-form-label">Pay From</label>
        <div class="col-sm-10">
		    <select class="form-control" asp-items="@Model.CreditOptions" asp-for="@Model.credit" ></select>
        </div>
	</div>
    <div class = "form-group row">
		<label class="col-sm-2 col-form-label">Pay To</label>
        <div class="col-sm-10">
		    <select class="form-control" asp-items="@Model.DebitOptions" asp-for="@Model.debit"></select>
        </div>
	</div>
    <div class = "form-group row">
		<label class="col-sm-2 col-form-label">Date Paid</label>
        <div class="col-sm-10">
		    <input type="date" class="form-control" asp-for="@Model.transaction.DatePaid" />
        </div>
	</div>
    <div class = "form-group row">
		<label class="col-sm-2 col-form-label">Amount</label>
        <div class="col-sm-10">
		    <input class="form-control" asp-for="@Model.transaction.Amount" />
        </div>
	</div>
    <div class = "form-group row">
		<label class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10">
		    <input class="form-control" asp-for="@Model.transaction.Description" />
        </div>
	</div>
    <hr />
    <div class = "form-group row">
		<label class="col-sm-2 col-form-label">Transaction Confirmed</label>
        <div class="col-sm-10">
		    <input class="form-check-input" type="checkbox" asp-for="@Model.transaction.Confirmed" />
        </div>
	</div>
    <hr />
    <input type="hidden" asp-for="@Model.selected" />
    <input type="hidden" asp-for="@Model.transaction.RecurranceID" />
    <button class="btn btn-primary" type="submit" >Save Changes</button>

    <br />
</form>